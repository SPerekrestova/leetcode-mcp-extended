{
    "name": "@sperekrestova/interactive-leetcode-mcp",
    "description": "Interactive LeetCode MCP server with authorization and submission capabilities for seamless problem-solving with Claude",
    "version": "2.0.0",
    "author": "SPerekrestova",
    "main": "./build/index.js",
    "keywords": [
        "leetcode",
        "lc",
        "mcp",
        "programming",
        "algorithm",
        "authorization",
        "submission",
        "claude",
        "practice"
    ],
    "scripts": {
        "test": "vitest run | pino-pretty",
        "test:watch": "vitest watch",
        "build": "tsc && chmod u+x build/index.js",
        "start": "node build/index.js",
        "dev": "tsc-watch --onSuccess \"node build/index.js\"",
        "format": "prettier --write .",
        "prepare": "husky"
    },
    "bin": {
        "interactive-leetcode-mcp": "build/index.js"
    },
    "type": "module",
    "files": [
        "build"
    ],
    "license": "MIT",
    "engines": {
        "node": ">=20.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SPerekrestova/interactive-leetcode-mcp.git"
    },
    "bugs": {
        "url": "https://github.com/SPerekrestova/interactive-leetcode-mcp/issues"
    },
    "homepage": "https://github.com/SPerekrestova/interactive-leetcode-mcp#readme",
    "types": "./build/index.d.ts",
    "lint-staged": {
        "*.{js,ts,jsx,tsx}": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.{md,json,yml,yaml,html,css}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.25.2",
        "axios": "^1.13.2",
        "leetcode-query": "^2.0.0",
        "minimist": "^1.2.8",
        "pino": "^9.6.0",
        "playwright": "^1.57.0",
        "ts-node": "^10.9.2",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.24.0",
        "@types/minimist": "^1.2.5",
        "@types/node": "^22.14.0",
        "esbuild": "^0.25.2",
        "eslint": "^9.24.0",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-prettier": "^5.2.6",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.1",
        "pino-pretty": "^13.0.0",
        "prettier": "^3.5.3",
        "prettier-plugin-organize-imports": "^4.1.0",
        "tsc-watch": "6.2.1",
        "tsx": "^4.21.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.29.1",
        "vite": "^6.3.5",
        "vitest": "^3.1.3"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "^4.40.1"
    }
}
